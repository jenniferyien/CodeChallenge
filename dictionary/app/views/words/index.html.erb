<p id="notice"><%= notice %></p>

<h1 id='title'>Word Look Up</h1>
<p id='sub'><%= link_to 'Add New Word', new_word_path %><p>

<%= form_tag words_path, :method => 'get' do %>
  <p class='search word'>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= form_tag words_path, :method => 'get' do %>
  <p class='search syn'>
    <%= text_field_tag :synonym_search, params[:synonym_search] %>
    <%= submit_tag "Synonym Search", :name => nil %>
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Definition</th>
      <th colspan="3"><hr/></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td id='name'><%= link_to word.word, word %></td>
        <td id='definition'><%= word.definition %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
